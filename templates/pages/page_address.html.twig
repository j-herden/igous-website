{% extends "base.html.twig" %}

{% block content %}
    <h1>{{ content.title }}</h1>

    {{ content.article|raw }}

    {% if content.address|default([])|length %}
    <div class="address">
        {% for addr in content.address %}
            <div class="address__item">
                {% include 'includes/address.html.twig' with {
                    content: addr,
                    
                } only %}
            </div>
        {% endfor %}
    </div>
    {% endif %} 

{% endblock %}
